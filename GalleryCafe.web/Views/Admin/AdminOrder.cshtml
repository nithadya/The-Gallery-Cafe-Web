    <script>
    $(document).ready(function () {
        // Initialize DataTable
        var table = $('#adminOrderTable').DataTable({
            "ajax": {
                "url": "/Order/GetAllOrders",
                "type": "GET",
                "dataSrc": function (json) {
                    if (json.success) {
                        return json.data;
                    }
                    alert(json.message); // Handle error
                    return [];
                }
            },
            "columns": [
                { "data": "OrderId" },
                { "data": "Name" },
                { "data": "FirstName" },
                { "data": "Quantity" },
                { "data": "OrderDate" },
                { "data": "Status" },
                { "data": "TotalPrice" },
                {
                    "data": null,
                    "render": function (data, type, row) {
                        return ` <button class="approve-btn" data-id="${row.OrderId}">Approve</button><button class="cancel-btn" data-id="${row.OrderId}">Cancel</button><button class="edit-btn" data-id="${row.OrderId}" data-quantity="${row.Quantity}">Update</button><button class="delete-btn" data-id="${row.OrderId}">Delete</button>`;
                    }
                }
            ],
            "responsive": true
        });

        // Approve button functionality
        $('#adminOrderTable').on('click', '.approve-btn', function () {
            var orderId = $(this).data('id');
            $.ajax({
                url: '/Order/ApproveOrder',
                method: 'POST',
                data: { orderId: orderId },
                success: function (response) {
                    Swal.fire('Approved!', response.message, 'success');
                    table.ajax.reload(); // Reload DataTable after approval
                }
            });
        });

        // Cancel button functionality
        $('#adminOrderTable').on('click', '.cancel-btn', function () {
            var orderId = $(this).data('id');
            $.ajax({
                url: '/Order/CancelOrder',
                method: 'POST',
                data: { orderId: orderId },
                success: function (response) {
                    Swal.fire('Cancelled!', response.message, 'success');
                    table.ajax.reload(); // Reload DataTable after cancellation
                }
            });
        });

        // Edit button functionality
        $('#adminOrderTable').on('click', '.edit-btn', function () {
            var orderId = $(this).data('id');
            var quantity = $(this).data('quantity');

            Swal.fire({
                title: 'Update Order',
                html:  `<input type="number" id="editQuantity" class="swal2-input" value="${quantity}">`,
                confirmButtonText: 'Save',
                preConfirm: () => {
                    var newQuantity = document.getElementById('editQuantity').value;
                    return { newQuantity: newQuantity };
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Order/EditOrder',
                        method: 'POST',
                        data: {
                            orderId: orderId,
                            quantity: result.value.newQuantity,
                            status: 'Pending'
                        },
                        success: function (response) {
                            Swal.fire('Updated!', response.message, 'success');
                            table.ajax.reload(); // Reload DataTable after update
                        }
                    });
                }
            });
        });

        // Delete button functionality
        $('#adminOrderTable').on('click', '.delete-btn', function () {
            var orderId = $(this).data('id');

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Order/DeleteOrderAdmin',
                        method: 'POST',
                        data: { orderId: orderId },
                        success: function (response) {
                            Swal.fire('Deleted!', response.message, 'success');
                            table.ajax.reload(); // Reload DataTable after deletion
                        }
                    });
                }
            });
        });
    });
    </script>

