    text-transform: capitalize;
    letter-spacing: 2px;
    animation: fadeInHeading 1.5s forwards;
    padding: 10px 10px 15px 10px;
}



@@keyframes fadeInHeading {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@@keyframes fadeInSubHeading {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
