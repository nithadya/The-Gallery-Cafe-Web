    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#usersTable').DataTable({
                scrollX: true,
                ajax: {
                    url: '/UserManage/GetUsers',
                    type: 'GET',
                    datatype: 'json'
                },
                columns: [
                    { data: 'UserId' },
                    { data: 'FirstName' },
                    { data: 'LastName' },
                    { data: 'Email' },
                    { data: 'Role' },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return `<button class='btn btn-primary btn-sm' onclick='editUser(${row.UserId})'>Edit</button> <button class='btn btn-danger btn-sm' onclick='deleteUser(${row.UserId})'>Delete</button>`;
                        }
                    }
                ]
            });

            // Delete user
            window.deleteUser = function (userId) {
                if (confirm("Are you sure you want to delete this user?")) {
                    $.post('/UserManage/DeleteUser', { userId: userId }, function (result) {
                        if (result.success) {
                            alert(result.message);
                            table.ajax.reload(); // Refresh the table
                        } else {
                            alert(result.message);
                        }
                    });
                }
            };

            // Edit user
            window.editUser = function (userId) {
                $.get(`/UserManage/GetUsers?userId=${userId}`, function (data) {
                    var user = data.data[0]; // Assuming the response is an array
                    $('#editUserId').val(user.UserId);
                    $('#editFirstName').val(user.FirstName);
                    $('#editLastName').val(user.LastName);
                    $('#editEmail').val(user.Email);
                    $('#editRole').val(user.Role);
                    $('#editUserModal').modal('show');
                });
            };

            // Submit Edit User form
            $('#editUserForm').on('submit', function (e) {
                e.preventDefault();
                var userId = $('#editUserId').val();
                var firstName = $('#editFirstName').val();
                var lastName = $('#editLastName').val();
                var email = $('#editEmail').val();
                var role = $('#editRole').val();

                $.post('/UserManage/EditUser', { userId: userId, firstName: firstName, lastName: lastName, email: email, role: role }, function (result) {
                    if (result.success) {
                        alert(result.message);
                        $('#editUserModal').modal('hide');
                        table.ajax.reload(); // Refresh the table
                    } else {
                        alert(result.message);
                    }
                });
            });
        });
    </script>


