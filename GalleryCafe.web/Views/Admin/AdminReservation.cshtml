                columns: [
                    { data: 'TableNumber', title: 'Table Number', render: function (data, type, row) { return `<i class="fas fa-chair"></i> ${data}`; } },
                    { data: 'ReservationDate', title: 'Reservation Date', render: function (data, type, row) { return `<i class="fas fa-calendar-alt"></i> ${data}`; } },
                    { data: 'NumberOfGuests', title: 'Guests', render: function (data, type, row) { return `<i class="fas fa-users"></i> ${data}`; } },
                    { data: 'Status', title: 'Status', render: function (data, type, row) { return data === 'Confirmed' ? `<span class="badge bg-success">${data}</span>` : `<span class="badge bg-warning">${data}</span>`; } },
                    {
                        data: null,
                        title: 'Actions',
                        render: function (data, type, row) {
                            return `<button class="btn btn-approve approveReservationBtn" data-id="${row.ReservationId}"><i class="fas fa-check-circle"></i> Approve</button><button class="btn btn-cancel cancelReservationBtn" data-id="${row.ReservationId}"><i class="fas fa-times-circle"></i> Cancel</button>`;
                        }
                    }
                ]
            });

            // Approve reservation logic
            $('#reservationTable').on('click', '.approveReservationBtn', function () {
                const reservationId = $(this).data('id');
                $.ajax({
                    url: '/Reservation/UpdateReservationStatus',
                    type: 'POST',
                    data: { reservationId: reservationId, status: 'Approved' },
                    success: function (response) {
                        if (response.success) {
                            alert('Reservation approved.');
                            $('#reservationTable').DataTable().ajax.reload();
                        } else {
                            alert('Failed to approve reservation.');
                        }
                    }
                });
            });

            // Cancel reservation logic
            $('#reservationTable').on('click', '.cancelReservationBtn', function () {
                const reservationId = $(this).data('id');
                $.ajax({
                    url: '/Reservation/UpdateReservationStatus',
                    type: 'POST',
                    data: { reservationId: reservationId, status: 'Cancelled' },
                    success: function (response) {
                        if (response.success) {
                            alert('Reservation cancelled.');
                            $('#reservationTable').DataTable().ajax.reload();
                        } else {
