    <script>
        $(document).ready(function () {
            // Initialize DataTables with AJAX data source
            $('#reservationTable').DataTable({
                responsive: true,
                ajax: '/Reservation/GetAllReservations',
                columns: [
                    { data: 'TableNumber', title: 'Table Number', render: function (data, type, row) { return `<i class="fas fa-chair"></i> ${data}`; } },
                    { data: 'ReservationDate', title: 'Reservation Date', render: function (data, type, row) { return `<i class="fas fa-calendar-alt"></i> ${data}`; } },
                    { data: 'NumberOfGuests', title: 'Guests', render: function (data, type, row) { return `<i class="fas fa-users"></i> ${data}`; } },
                    { data: 'Status', title: 'Status', render: function (data, type, row) { return data === 'Confirmed' ? `<span class="badge bg-success">${data}</span>` : `<span class="badge bg-warning">${data}</span>`; } },
                    {
                        data: null,
                        title: 'Actions',
                        render: function (data, type, row) {
                            return `<button class="btn btn-approve approveReservationBtn" data-id="${row.ReservationId}"><i class="fas fa-check-circle"></i> Approve</button><button class="btn btn-cancel cancelReservationBtn" data-id="${row.ReservationId}"><i class="fas fa-times-circle"></i> Cancel</button>`;
                        }
                    }
                ]
            });

            // Approve reservation logic
            $('#reservationTable').on('click', '.approveReservationBtn', function () {
                const reservationId = $(this).data('id');
                $.ajax({
                    url: '/Reservation/UpdateReservationStatus',
                    type: 'POST',
                    data: { reservationId: reservationId, status: 'Approved' },
                    success: function (response) {
                        if (response.success) {
                            alert('Reservation approved.');
                            $('#reservationTable').DataTable().ajax.reload();
                        } else {
                            alert('Failed to approve reservation.');
                        }
                    }
                });
            });

            // Cancel reservation logic
            $('#reservationTable').on('click', '.cancelReservationBtn', function () {
                const reservationId = $(this).data('id');
                $.ajax({
                    url: '/Reservation/UpdateReservationStatus',
                    type: 'POST',
                    data: { reservationId: reservationId, status: 'Cancelled' },
                    success: function (response) {
                        if (response.success) {
                            alert('Reservation cancelled.');
                            $('#reservationTable').DataTable().ajax.reload();
                        } else {
                            alert('Failed to cancel reservation.');
                        }
                    }
                });
            });
        });


        // Function to save changes made in the edit modal
        function saveEdit() {
            var reservationData = {
                ReservationId: $('#editReservationId').val(),
                TableNumber: $('#editTableNumber').val(),
                ReservationDate: $('#editReservationDate').val(),
                Guests: $('#editGuests').val(),
                Status: $('#editStatus').val()
            };

            $.ajax({
                url: '/Reservation/UpdateReservation',
                type: 'POST',
                data: reservationData,
                success: function () {
                    $('#reservationTable').DataTable().ajax.reload();
                    $('#editReservationModal').modal('hide');
                    Swal.fire('Success', 'Reservation updated successfully!', 'success');
                },
                error: function () {
                    Swal.fire('Error', 'Unable to update reservation.', 'error');
                }
            });
        }

        // Function to delete a reservation
        function deleteReservation(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/Reservation/DeleteReservation/${id}`,
                        type: 'POST',
                        success: function () {
                            $('#reservationTable').DataTable().ajax.reload();
                            Swal.fire('Deleted!', 'Your reservation has been deleted.', 'success');
                        },
                        error: function () {
                            Swal.fire('Error', 'Unable to delete reservation.', 'error');
                        }
                    });
                }
            });
        }
    </script>


