            <script>
                $(document).ready(function () {
                    // Fetch data for orders, users, and reservations
                    $.ajax({
                        url: '/Admin/GetStats',
                        method: 'GET',
                        success: function (response) {
                            $('#total-orders').text(response.totalOrders);
                            $('#total-users').text(response.totalUsers);
                            $('#total-reservations').text(response.totalReservations);
                        },
                        error: function (err) {
                            console.error('Failed to fetch data', err);
                        }
                    });
                });
            </script>
