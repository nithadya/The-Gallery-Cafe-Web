    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>

        $(document).ready(function () {
            var table = $('#menuTable').DataTable({
                responsive: true,
                ajax: '/Menu/GetAllMenuItems',
                columns: [
                    { data: 'Name', title: 'Menu Item', render: function (data) { return `<i class="fas fa-utensils"></i> ${data}`; } },
                    { data: 'Description', title: 'Description', render: function (data) { return `<i class="fas fa-info-circle"></i> ${data}`; } },
                    { data: 'Price', title: 'Price', render: function (data) { return `<i class="fas fa-dollar-sign"></i> ${data.toFixed(2)}`; } },
                    { data: 'CuisineType', title: 'Cuisine Type', render: function (data) { return `<i class="fas fa-globe"></i> ${data}`; } },
                    { data: 'Available', title: 'Available', render: function (data) { return data ? `<span class="badge bg-success">Yes</span>` : `<span class="badge bg-danger">No</span>`; } },
                    {
                        data: null, title: 'Actions', render: function (data, type, row) {return `<button class="btn btn-edit editMenuItemBtn" data-id="${row.MenuItemId}"><i class="fas fa-edit"></i> Edit</button> <button class="btn btn-delete deleteMenuItemBtn" data-id="${row.MenuItemId}"><i class="fas fa-trash-alt"></i> Delete</button>`;
                        }
                    }
                ]
            });

            // Edit Menu Item with SweetAlert and validation
            $('#menuTable').on('click', '.editMenuItemBtn', function () {
                var menuItemId = $(this).data('id');
                var rowData = table.row($(this).parents('tr')).data();

                Swal.fire({
                    title: 'Edit Menu Item',
                    html:
                        `<div style="display: flex; flex-direction: column; align-items: flex-start;">` +
                        `<label for="swal-name">Menu Name</label>` +
                        `<input id="swal-name" class="swal2-input" value="${rowData.Name}" placeholder="Menu Name" style="margin-bottom: 10px;">` +
                        `<label for="swal-description">Description</label>` +
                        `<input id="swal-description" class="swal2-input" value="${rowData.Description}" placeholder="Description" style="margin-bottom: 10px;">` +
                        `<label for="swal-price">Price</label>` +
                        `<input id="swal-price" class="swal2-input" type="number" value="${rowData.Price}" placeholder="Price" style="margin-bottom: 10px;" min="0>` + 
                        `<label for="swal-cuisineType">Cuisine Type</label>` +
                        `<input id="swal-cuisineType" class="swal2-input" value="${rowData.CuisineType}" placeholder="Cuisine Type" style="margin-bottom: 10px;">` +
                        `<div style="display: flex; align-items: center;">` +
                        `<input id="swal-available" class="swal2-checkbox" type="checkbox" ${rowData.Available ? 'checked' : ''} style="margin-right: 5px;">` +
                        `<label for="swal-available">Available</label>` +
                        `</div>` +
                        `</div>`,
                    focusConfirm: false,
                    showCancelButton: true,
                    confirmButtonText: 'Save',
                    cancelButtonText: 'Cancel',
                    preConfirm: () => {
                        const name = document.getElementById('swal-name').value.trim();
                        const description = document.getElementById('swal-description').value.trim();
                        const price = parseFloat(document.getElementById('swal-price').value);
                        const cuisineType = document.getElementById('swal-cuisineType').value.trim();
                        const available = document.getElementById('swal-available').checked;

                        // Validation
                        if (!name || !description || isNaN(price) || price < 0 || !cuisineType) {
                            Swal.showValidationMessage(`Please fill in all fields correctly.`);
                            return false;
                        }

                        return {
                            menuItemId: menuItemId,
                            name: name,
                            description: description,
                            price: price,
                            cuisineType: cuisineType,
                            available: available
                        };
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Send updated data to the server via AJAX
                        $.ajax({
                            url: '/Menu/EditMenuItem',
                            type: 'POST',
                            data: result.value,
                            success: function (response) {
                                Swal.fire({
                                    title: response.success ? 'Success!' : 'Error!',
                                    text: response.message,
                                    icon: response.success ? 'success' : 'error',
                                    timer: 2000,
                                    showConfirmButton: false
                                });

                                if (response.success) {
                                    // Reload the table after successful update
                                    table.ajax.reload();
                                }
                            },
                            error: function (xhr, status, error) {
                                Swal.fire({
                                    title: 'Error!',
                                    text: 'An error occurred while processing the request.',
                                    icon: 'error',
                                    timer: 2000,
                                    showConfirmButton: false
                                });
                            }
                        });
                    }
                });
            });

            // Delete Menu Item with SweetAlert confirmation
            $('#menuTable').on('click', '.deleteMenuItemBtn', function () {
                var menuItemId = $(this).data('id');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Menu/DeleteMenuItem',
                            type: 'POST',
                            data: { menuItemId: menuItemId },
                            success: function (response) {
                                Swal.fire({
                                    title: response.success ? 'Deleted!' : 'Error!',
                                    text: response.message,
                                    icon: response.success ? 'success' : 'error',
                                    timer: 2000,
                                    showConfirmButton: false
                                });
                                if (response.success) {
                                    table.ajax.reload();
                                }
                            }
                        });
                    }
                });
            });
        });
</script>


