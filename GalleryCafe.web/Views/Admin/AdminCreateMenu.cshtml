    <script>
        $(document).ready(function () {
            // Show SweetAlert popup to add menu item
            $('#addMenuBtn').on('click', function () {
                Swal.fire({
                    title: 'Add New Menu Item',
                    html:
                        '<input id="swal-name" class="swal2-input" placeholder="Name">' +
                        '<input id="swal-description" class="swal2-input" placeholder="Description">' +
                        '<input id="swal-price" class="swal2-input" placeholder="Price" type="number" step="0.01">' +
                        '<input id="swal-cuisineType" class="swal2-input" placeholder="Cuisine Type">' +
                        '<select id="swal-available" class="swal2-input mb-10">' +
                            '<option value="true">Available</option>' +
                            '<option value="false">Not Available</option>' +
                        '</select>',
                    focusConfirm: false,
                    showCancelButton: true,
                    confirmButtonText: 'Submit',
                    cancelButtonText: 'Cancel',
                    preConfirm: () => {
                        return {
                            name: document.getElementById('swal-name').value,
                            description: document.getElementById('swal-description').value,
                            price: document.getElementById('swal-price').value,
                            cuisineType: document.getElementById('swal-cuisineType').value,
                            available: document.getElementById('swal-available').value === 'true'
                        };
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("AddMenuItem", "Menu")',
                            type: 'POST',
                            data: result.value,
                            success: function (response) {
                                Swal.fire({
                                    title: response.success ? 'Success!' : 'Error!',
                                    text: response.message,
                                    icon: response.success ? 'success' : 'error',
                                    timer: 2000,
                                    showConfirmButton: false
                                });

                                // Clear input fields
                                $('#swal-name').val('');
                                $('#swal-description').val('');
                                $('#swal-price').val('');
                                $('#swal-cuisineType').val('');
                                $('#swal-available').val('true');
                            },
                            error: function () {
                                Swal.fire('Error!', 'Failed to add menu item. Please try again.', 'error');
                            }
                        });
                    }
                });
            });
        });
    </script>


