        /* Menu Heading Animation */
        .heading-animated {
            font-size: 3rem;
            color: #fc7f09;
            opacity: 0;
            transform: translateY(-20px);
            animation: fadeInUp 1s forwards;
        }

        /* Animation keyframes */
        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Menu Card Styling */
        .add-menu-card {
            background: #fc7f09;
            color: white;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin: 20px auto;
            max-width: 600px;
        }

            .add-menu-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            }

        .card-title {
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .card-description {
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        /* Button Styling */
        .add-menu-btn {
            font-size: 1.5rem;
            padding: 10px 20px;
            border-radius: 30px;
            background-color: #ffffff;
            color: #fc7f09;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .add-menu-btn i {
                margin-right: 8px;
            }

            .add-menu-btn:hover {
                background-color: #fc7f09;
                color: white;
                transform: scale(1.05);
            }
    </style>
