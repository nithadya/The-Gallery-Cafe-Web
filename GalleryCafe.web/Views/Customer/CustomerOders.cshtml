    <style>

:root{
    --peru: #fc7f09;
    --black: #222;
    --white: #fff;
    --light-black: #666;
    --light-white: #ccc;
    --light-bg: #f5f5f5;
    --dark-bg: rgba(0, 0, 0, 0.7);
    --border: 1rem solid #aaa;
    --secondary-color: #ff9f1c;
    --box-shadow: 0 .5rem 1.5rem rgba(0, 0, 0, 0.15);
    --button-hover-color: #f5b041;
    --border-radius: 12px;
    --transition-speed: 0.3s;
    --card-bg-gradient: linear-gradient(145deg, #ff9f1c, #fc7f09);

      /**
   * TRANSITION
   */

  --transition-1: 250ms ease;
  --transition-2: 500ms ease;
  --transition-3: 1000ms ease;

    /**
   * BORDER RADIUS
   */

  --radius-24: 24px;
  --radius-circle: 50%;

    /**
   * GRADIENT COLOR
   */

  --loading-text-gradient: linear-gradient(90deg, transparent 0% 16.66%, var(--smoky-black-3) 33.33% 50%,  transparent 66.66% 75%);
  --gradient-1: linear-gradient(to top,hsla(0, 0%, 0%, 0.9),hsla(0, 0%, 0%, 0.7),transparent);
}

     /* General styles */
body {
    font-family: 'Poppins', sans-serif;
    background-color: var(--light-bg);
    color: var(--black);
    margin: 0;
    padding: 0;
}

/* Table container */
.table-container {
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
    background: var(--white);
    border-radius: var(--border-radius);
    box-shadow: var(--box-shadow);
}

/* Table styles */
table.dataTable {
    width: 100%;
    border-collapse: collapse;
    font-size: 1rem;
    background: var(--white);
    border-radius: var(--radius-24);
    overflow: hidden;
}

table.dataTable thead th {
    background-color: var(--peru);
    color: var(--white);
    text-transform: uppercase;
    padding: 15px;
    border-bottom: 3px solid var(--secondary-color);
}

table.dataTable tbody td {
    padding: 12px;
    border-bottom: 1px solid var(--light-white);
}

table.dataTable tbody tr:hover {
    background-color: var(--light-bg);
    cursor: pointer;
}

/* Action buttons */
 button {
            border: none;
            border-radius: var(--border-radius);
            padding: 8px 12px;
            background-color: var(--secondary-color);
            color: var(--white);
            cursor: pointer;
            transition: background-color var(--transition-1);
 }

 button:hover {
            background-color: var(--button-hover-color);
        }



.btn-delete {
    background-color: var(--peru);
    color: var(--white);
}

.btn-delete:hover {
    background-color: var(--button-hover-color);
}

/* Responsive breakpoints */
@@media (max-width: 768px) {
    table.dataTable thead {
        display: none;
    }

    table.dataTable, table.dataTable tbody, table.dataTable tr, table.dataTable td {
        display: block;
        width: 100%;
    }

    table.dataTable tr {
        margin-bottom: 15px;
        box-shadow: var(--box-shadow);
        border-radius: var(--border-radius);
    }

    table.dataTable td {
        padding: 15px;
        text-align: right;
        position: relative;
        border-bottom: 1px solid var(--light-white);
    }

    table.dataTable td::before {
        content: attr(data-label);
        position: absolute;
        left: 15px;
        font-weight: bold;
        color: var(--light-black);
    }

    .btn {
        margin-bottom: 10px;
    }
}

/* Animations */
@@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(50px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.table-container {
    animation: slideIn var(--transition-2) ease;
}
.sub-heading, .heading {
    text-align: center;
    margin: 0;
    transition: transform 0.4s ease, color 0.4s ease;
}


.sub-heading {
    font-size: 1.5rem;
    color: #fc7f09; 
    text-transform: uppercase;
    letter-spacing: 1.5px;
    animation: fadeInSubHeading 1s forwards;
    padding-bottom:0;
}


.heading {
    font-size: 2.5rem;
    color: #192a56; 
    font-weight: bold;
    text-transform: capitalize;
    letter-spacing: 2px;
    animation: fadeInHeading 1.5s forwards;
    padding: 10px 10px 15px 10px;
}



@@keyframes fadeInHeading {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@@keyframes fadeInSubHeading {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Hover effects */
.heading:hover, .sub-heading:hover {
    transform: scale(1.05);
    color: #ff6347; 
}


