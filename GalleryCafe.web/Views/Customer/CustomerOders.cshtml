    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable
            var table = $('#orderTable').DataTable({
                "ajax": {
                    "url": "/Order/GetCustomerOrders",
                    "type": "GET",
                    "dataSrc": function (json) {
                        if (json.success) {
                            return json.data;
                        }
                        alert(json.message); // Handle error
                        return [];
                    }
                },
                "columns": [
                    { "data": "OrderId" },
                    { "data": "Name" },
                    { "data": "Quantity" },
                    { "data": "OrderDate" },
                    { "data": "Status" },
                    { "data": "TotalPrice" },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return `<button class="edit-btn" data-id="${row.OrderId}" data-quantity="${row.Quantity}">Edit</button><button class="delete-btn" data-id="${row.OrderId}">Delete</button>`;
                        }
                    }
                ],
                "responsive": true
            });

            // Edit button functionality
            $('#orderTable').on('click', '.edit-btn', function () {
                var orderId = $(this).data('id');
                var quantity = $(this).data('quantity');

                Swal.fire({
                    title: 'Edit Order',
                    html: `
                        <input type="number" id="editQuantity" class="swal2-input" value="${quantity}">
                    `,
                    confirmButtonText: 'Save',
                    preConfirm: () => {
                        var newQuantity = document.getElementById('editQuantity').value;
                        return { newQuantity: newQuantity };
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Order/EditOrder',
                            method: 'POST',
                            data: {
                                orderId: orderId,
                                quantity: result.value.newQuantity
                            },
                            success: function (response) {
                                Swal.fire('Updated!', response.message, 'success');
                                table.ajax.reload(); // Reload DataTable after update
                            }
                        });
                    }
                });
            });

            // Delete button functionality
            $('#orderTable').on('click', '.delete-btn', function () {
                var orderId = $(this).data('id');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Order/DeleteOrder',
                            method: 'POST',
                            data: { orderId: orderId },
                            success: function (response) {
                                Swal.fire('Deleted!', response.message, 'success');
                                table.ajax.reload(); // Reload DataTable after deletion
                            }
                        });
                    }
                });
            });
        });
    </script>


