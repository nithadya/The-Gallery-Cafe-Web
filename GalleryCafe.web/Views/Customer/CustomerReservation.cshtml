    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            var table = $('#reservationTable').DataTable({
                "ajax": {
                    "url": "/Reservation/GetCustomerReservations",
                    "type": "GET",
                    "dataSrc": function (json) {
                        if (json.success) {
                            return json.data;
                        }
                        alert(json.message); // Handle error
                        return [];
                    }
                },
                "columns": [
                    { "data": "ReservationId" },
                    { "data": "TableNumber" },
                    { "data": "ReservationDate" },
                    { "data": "NumberOfGuests" },
                    { "data": "Status" },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return `<button class="edit-btn" data-id="${row.ReservationId}" data-table="${row.TableNumber}" data-date="${row.ReservationDate}" data-guests="${row.NumberOfGuests}" data-status="${row.Status}">Edit</button><button class="delete-btn" data-id="${row.ReservationId}">Delete</button>`;
                        }
                    }
                ],
                "responsive": true
            });

            // Edit button functionality
            $('#reservationTable').on('click', '.edit-btn', function () {
                var reservationId = $(this).data('id');
                var tableNumber = $(this).data('table');
                var reservationDate = $(this).data('date');
                var numberOfGuests = $(this).data('guests');
                var status = $(this).data('status');

                Swal.fire({
                    title: 'Edit Reservation',
                    html: ` <input type="number" id="editTableNumber" class="swal2-input" placeholder="Table Number" value="${tableNumber}"> <input type="datetime-local" id="editReservationDate" class="swal2-input" value="${reservationDate}"/><input type="number" id="editNumberOfGuests" class="swal2-input" placeholder="Number of Guests" value="${numberOfGuests}">`,
                    confirmButtonText: 'Save',
                    preConfirm: () => {
                        return {
                            tableNumber: document.getElementById('editTableNumber').value,
                            reservationDate: document.getElementById('editReservationDate').value,
                            numberOfGuests: document.getElementById('editNumberOfGuests').value,
                        };
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Reservation/UpdateReservation',
                            method: 'POST',
                            data: {
                                reservationId: reservationId,
                                tableNumber: result.value.tableNumber,
                                reservationDate: result.value.reservationDate,
                                numberOfGuests: result.value.numberOfGuests,
                            },
                            success: function (response) {
                                Swal.fire('Updated!', response.message, 'success');
                                table.ajax.reload(); // Reload DataTable after update
                            }
                        });
                    }
                });
            });

            // Delete button functionality
            $('#reservationTable').on('click', '.delete-btn', function () {
                var reservationId = $(this).data('id');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Reservation/DeleteReservation',
                            method: 'POST',
                            data: { reservationId: reservationId },
                            success: function (response) {
                                Swal.fire('Deleted!', response.message, 'success');
                                table.ajax.reload(); // Reload DataTable after deletion
                            }
                        });
                    }
                });
            });
        });
    </script>


