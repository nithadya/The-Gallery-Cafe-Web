    <script>
        // Function to load menu items based on the selected cuisine
        function loadMenu(cuisineType) {
            $.ajax({
                url: '/Menu/GetMenuByCuisine', // Adjust this URL according to your routes
                type: 'GET',
                data: { cuisineType: cuisineType },
                success: function (response) {
                    if (response.success) {
                        renderMenuItems(response.data); // Call the function to render the menu items
                    } else {
                        showAlert('Error', response.message, 'error');
                    }
                },
                error: function () {
                    showAlert('Error', 'Failed to load menu items.', 'error');
                }
            });
        }

        // Function to render menu items dynamically
        function renderMenuItems(menuItems) {
            const menuContainer = $('#menu-items');
            menuContainer.empty(); // Clear previous items

            if (menuItems.length === 0) {
                menuContainer.append('<p>No items available for this cuisine.</p>');
                return;
            }

            menuItems.forEach(item => {
                menuContainer.append(`<div class="menu-card"><img src="${item.ImagePath}" alt="${item.Name}"><h4>${item.Name}</h4><p>${item.Description}</p><p>Price: $${item.Price.toFixed(2)}</p><button class="order-btn" onclick="addToOrder(${item.MenuItemId})">Pre-Order</button></div>`);
            });
        }

        // Function to handle adding an order
        function addToOrder(menuItemId) {
            $.get('/Account/GetCurrentUser', function (response) {
                if (response.success) {
                    // If the user is logged in, show the quantity prompt
                    Swal.fire({
                        title: 'Enter Quantity',
                        input: 'number',
                        inputLabel: 'Quantity',
                        inputPlaceholder: 'Enter the quantity',
                        showCancelButton: true,
                        confirmButtonText: 'Pre-order',
                        cancelButtonText: 'Cancel',
                        inputValidator: (value) => {
                            if (!value || value <= 0) {
                                return 'Please enter a valid quantity!';
                            }
                        }
                    }).then((result) => {
                        if (result.isConfirmed) {
                            const quantity = result.value;
                            placeOrder(menuItemId, quantity);
                        }
                    });
                } else {
                    // If the user is not logged in, show a login prompt
                    Swal.fire({
                        title: 'Please log in',
                        text: 'You must log in to place an order.',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Log in',
                        cancelButtonText: 'Cancel',
                        preConfirm: () => {
                            window.location.href = '/Account/Login';
                        }
                    });
                }
            });
        }

        // Function to place the order via AJAX
        function placeOrder(menuItemId, quantity) {
            $.ajax({
                url: '/Order/PreOrder',
                type: 'POST',
                data: { menuItemId: menuItemId, quantity: quantity },
                success: function (response) {
                    if (response.success) {
                        updateCartCount(response.orderCount);
                        Swal.fire({
                            title: 'Order Successful!',
                            text: response.message,
                            icon: 'success',
                            showCancelButton: true,
                            confirmButtonText: 'Preview Your Orders',
                            cancelButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/Customer/CustomerOrders'; // Redirect to order management page
                            }
                        });
                    } else {
                        showAlert('Error', response.message, 'error');
                    }
                },
                error: function () {
                    showAlert('Error', 'Failed to place the order.', 'error');
                }
            });
        }

        // Function to update cart count in the header
        function updateCartCount(count) {
            $('#cart-count').text(count);
        }

        // Utility function to show SweetAlert popups
        function showAlert(title, text, icon) {
            Swal.fire({
                title: title,
                text: text,
                icon: icon,
                confirmButtonText: 'OK'
            });
        }

        // Load initial menu items on page load
        $(document).ready(function () {
            loadMenu('Sri Lankan'); // Load default cuisine
        });


    </script>
    <script>
    // Logout function
    function logout() {
        $.post('/Account/Logout', function (response) {
            if (response.success) {
               
                window.location.reload();
            } else {
               
                alert('Logout failed. Please try again.');
            }
        }).fail(function() {

            alert('Error occurred while logging out. Please try again.');
        });
    }
    </script>

