    <style>
        .menu-navigation {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            width: 50%;
            border-radius: var(--border-radius);
            background-color: var(--peru); /* Peru color */
            padding: 5px;
            box-shadow: var(--box-shadow);
            margin: 0 auto; /* Center the navigation */
        }

        .nav-btn {
            display: flex;
            align-items: center; /* Align the image and text */
            padding: 8px 15px;
            background-color: var(--white);
            color: var(--peru);
            border: none;
            border-radius: var(--border-radius);
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: transform var(--transition-speed), background-color var(--transition-speed);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .nav-btn:hover {
                background-color: var(--button-hover-color);
                transform: translateY(-2px);
            }

        .cuisine-img {
            width: 25px;
            height: 25px;
            margin-right: 8px; /* Space between the image and text */
            border-radius: 50%;
            object-fit: cover; /* Ensure the image is contained properly */
        }

        .menu-items {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between; /* Adjusted to space out cards */
            margin: 20px auto; /* Center the menu items */
            width: 90%; /* Set a maximum width for better alignment */
        }

        .menu-card {
            background: var(--card-bg-gradient);
            border-radius: var(--border-radius);
            padding: 10px;
            margin: 10px;
            width: calc(33% - 20px); /* Responsive width */
            box-shadow: var(--box-shadow);
            text-align: center;
            transition: transform var(--transition-speed), box-shadow var(--transition-speed);
        }

            .menu-card img {
                width: 100%;
                height: auto;
                border-radius: var(--border-radius);
            }

            .menu-card:hover {
                transform: scale(1.05);
                box-shadow: 0 0 25px rgba(0, 0, 0, 0.2);
            }

        /* Pre-Order Button Styles */
        .order-btn {
            background-color: var(--secondary-color);
            color: var(--white);
            border: none;
            padding: 10px 20px;
            border-radius: var(--border-radius);
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: background-color var(--transition-speed), transform var(--transition-speed);
        }

            .order-btn:hover {
                background-color: var(--button-hover-color);
                transform: translateY(-3px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            }


        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .menu-card {
                width: calc(50% - 20px); /* 2 cards per row */
            }

            .nav-btn {
                font-size: 12px;
                padding: 6px 10px;
            }

            .cuisine-img {
                width: 20px;
                height: 20px;
            }
        }

        @@media (max-width: 480px) {
            .menu-card {
                width: 100%; /* 1 card per row */
            }

            .menu-navigation {
                display: flex;
                flex-direction: column; /* Stack buttons vertically */
                align-items: center;
                width: 100%; /* Full width for mobile */
            }

            .nav-btn {
                width: 90%; /* Full-width buttons with some margin on the sides */
                margin-bottom: 10px;
                padding: 10px 15px; /* Add more padding for touch-friendly buttons */
                font-size: 14px;
                justify-content: center; /* Center the content in the button */
            }

            .cuisine-img {
                width: 18px; /* Slightly smaller images */
                height: 18px;
                margin-right: 5px;
            }
        }
    </style>
</head>

