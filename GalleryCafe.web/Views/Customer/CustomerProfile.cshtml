    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            // Fetch the logged-in user's data using AJAX
            $.ajax({
                url: '@Url.Action("GetCurrentUser", "Account")', // Calls the GetCurrentUser action in AccountController
                method: 'GET',
                success: function (response) {
                    if (response.success) {
                        // Display user data
                        $('#username').text(response.data.username);
                        $('#email').text(response.data.role);
                        $('#role').text(response.data.role);

                        // Set avatar initials (First letter of the username)
                        let initials = response.data.username.charAt(0).toUpperCase();
                        $('#avatar-initials').text(initials);
                    } else {
                        // Redirect to login if no user is logged in
                        window.location.href = '@Url.Action("Login", "Account")';
                    }
                },
                error: function () {
                    alert("Failed to retrieve user data.");
                }
            });

            // Logout function
            $('#logout-btn').click(function () {
                $.ajax({
                    url: '@Url.Action("Logout", "Account")',
                    method: 'POST',
                    success: function (response) {
                        if (response.success) {
                            window.location.href = '@Url.Action("Login", "Account")';
                        } else {
                            alert("Logout failed. Try again.");
                        }
                    }
                });
            });
        });
    </script>

