
@section Styles {
    <link href="~/Content/home.css" rel="stylesheet" type="text/css" />
}

<!-- Custom Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
<!-- Smooth Scroll Library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/smooth-scroll/16.1.3/smooth-scroll.polyfills.min.js"></script>
<style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            scroll-behavior: smooth;
            color: #333;
        }

        /* Parallax Section */
        .parallax {
            background-image: url("../../Content/img/gallery-cafe.jpg");
            height: 500px;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-align: center;
        }

        .parallax h1 {
            font-size: 4rem;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
        }

        .content {
            padding: 100px 0;
            background-color: #f9f9f9;
            text-align: center;
        }

        .content h2 {
            font-size: 3rem;
            color: #fc7f09;
            margin-bottom: 30px;
            font-weight: bold;
        }

        .content p {
            font-size: 1.2rem;
            max-width: 700px;
            margin: 0 auto 40px;
            line-height: 1.6;
        }

        .mission-vision {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 40px;
        }

        .mission-vision .card {
            width: 300px;
            margin-bottom: 30px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            background: #fff;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .mission-vision .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

        .mission-vision .card h3 {
            font-size: 1.8rem;
            color: #333;
        }

        .mission-vision .card p {
            font-size: 1rem;
            color: #666;
            line-height: 1.5;
        }

        /* Parallax Section (Footer) */
        .parallax-footer {
            background-image: url("../../Content/img/gallery-cafe3.jpg");
            height: 300px;
            background-attachment: fixed;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            text-align: center;
        }

        .parallax-footer h2 {
            font-size: 3rem;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
        }

        /* Scroll to top button */
        .scroll-top {
            position: fixed;
            right: 20px;
            bottom: 20px;
            background-color: #fc7f09;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 50%;
            cursor: pointer;
            display: none;
        }

        .scroll-top i {
            font-size: 1.5rem;
        }

        @@media (max-width: 768px) {
            .mission-vision {
                flex-direction: column;
                align-items: center;
            }

            .parallax h1, .parallax-footer h2 {
                font-size: 2.5rem;
            }

            .mission-vision .card {
                width: 90%;
            }
        }

        @@media (max-width: 480px) {
            .parallax h1, .parallax-footer h2 {
                font-size: 2rem;
            }

            .content h2 {
                font-size: 2.5rem;
            }
        }
</style>
</head>
<body>
    <!-- Parallax Section -->
    <section class="parallax">
        <h1>About The Gallery Cafe</h1>
    </section>
    <!-- Main Content -->
    <section class="content">
        <h2>Our Story</h2>
        <p>
            The Gallery Cafe is a contemporary dining experience, where the ambiance of art meets exquisite cuisine. Our mission is to provide the finest dining experience, blending the artistry of food with a modern, stylish atmosphere.
        </p>
        <div class="mission-vision">
            <!-- Vision Card -->
            <div class="card">
                <h3>Our Vision</h3>
                <p>To be the leading culinary experience that integrates art and dining, offering a unique space where our guests can enjoy world-class cuisine with a creative and vibrant atmosphere.</p>
            </div>
            <!-- Mission Card -->
            <div class="card">
                <h3>Our Mission</h3>
                <p>To create unforgettable dining experiences that inspire creativity and innovation, while providing exceptional food quality, service, and atmosphere that reflects our passion for art and culinary mastery.</p>
            </div>
        </div>
    </section>
    <!-- Parallax Footer -->
    <section class="parallax-footer">
        <h2>Experience Art in Every Bite</h2>
    </section>
    <!-- Scroll to Top Button -->
    <button class="scroll-top" id="scroll-top-btn">
        <i class="fas fa-arrow-up"></i>
    </button>
    <!-- Include Bootstrap JS (Optional for some Bootstrap components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS for Scroll-to-Top and Smooth Scroll -->
    <script>
        var scroll = new SmoothScroll('a[href*="#"]', {
            speed: 800
        });

        // Scroll to top functionality
        var scrollBtn = document.getElementById('scroll-top-btn');
        window.onscroll = function () {
            if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
                scrollBtn.style.display = "block";
            } else {
                scrollBtn.style.display = "none";
            }
        };

        scrollBtn.addEventListener('click', function () {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
