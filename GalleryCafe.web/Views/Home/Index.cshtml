<<script>
    $(document).ready(function () {
        // Search functionality
        $('#search-box').on('input', function () {
            var query = $(this).val().trim();
            if (query.length > 0) {
                searchFood(query);
            } else {
                $('#search-results').empty();
            }
        });

        // Function to handle the search
        function searchFood(query) {
            $.ajax({
                url: '/Menu/SearchFood',
                type: 'GET',
                data: { query: query },
                success: function (response) {
                    if (response.success) {
                        displaySearchResults(response.data);
                    } else {
                        $('#search-results').html('<p>No results found.</p>');
                    }
                },
                error: function () {
                    $('#search-results').html('<p>An error occurred while fetching results.</p>');
                }
            });
        }

        // Display search results
        function displaySearchResults(foodItems) {
            var resultsContainer = $('#search-results');
            resultsContainer.empty();
            foodItems.forEach(function (item) {
                var card = `<div class="menu-card"><img src="${item.ImagePath}" alt="${item.Name}"> <h4>${item.Name}</h4><p>${item.Description}</p><p>Price: $${item.Price.toFixed(2)}</p><button class="pre-order-btn" onclick="openPreOrder(${item.MenuItemId}, '${item.Name}')">Pre-order</button></div>`;
                resultsContainer.append(card);
            });
        }

        // Function to handle adding an order
        function addToOrder(menuItemId) {
            $.get('/Account/GetCurrentUser', function (response) {
                if (response.success) {
                    // If the user is logged in, show the quantity prompt
                    Swal.fire({
                        title: 'Enter Quantity',
                        input: 'number',
                        inputLabel: 'Quantity',
                        inputPlaceholder: 'Enter the quantity',
                        showCancelButton: true,
                        confirmButtonText: 'Pre-order',
                        cancelButtonText: 'Cancel',
                        inputValidator: (value) => {
                            if (!value || value <= 0) {
                                return 'Please enter a valid quantity!';
                            }
                        }
                    }).then((result) => {
                        if (result.isConfirmed) {
                            const quantity = result.value;
                            placeOrder(menuItemId, quantity);
                        }
                    });
                } else {
                    // If the user is not logged in, show a login prompt
                    Swal.fire({
                        title: 'Please log in',
                        text: 'You must log in to place an order.',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Log in',
                        cancelButtonText: 'Cancel',
                        preConfirm: () => {
                            window.location.href = '/Account/Login';
                        }
                    });
                }
            });
        }

        // Function to place the order via AJAX
        function placeOrder(menuItemId, quantity) {
            $.ajax({
                url: '/Order/PreOrder',
                type: 'POST',
                data: { menuItemId: menuItemId, quantity: quantity },
                success: function (response) {
                    if (response.success) {
                        updateCartCount(response.orderCount);
                        Swal.fire({
                            title: 'Order Successful!',
                            text: response.message,
                            icon: 'success',
                            showCancelButton: true,
                            confirmButtonText: 'Preview Your Orders',
                            cancelButtonText: 'OK'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = '/Customer/CustomerOrders'; // Redirect to order management page
                            }
                        });
                    } else {
                        showAlert('Error', response.message, 'error');
                    }
                },
                error: function () {
                    showAlert('Error', 'Failed to place the order.', 'error');
                }
            });
        }

        // Update cart count
        function updateCartCount(count) {
            $('#cart-count').text(count);
        }
    });
</script>
